<div class = "row">
  <form class= "small-12 large-6 columns search-form" name='form' action='/search' method='get'>
    <fieldset>
      <legend>Brewery Search</legend>

      <label>Search
        <input type="text" name='query' placeholder="Enter brewery name, city or info here">
      </label>
        <button type='submit' style='background-color: #0F7D46;'>Search</button>
    </fieldset>
  </form>
</div>

<div class ="row">
  <% if @brewery_results %>
    <ul>
      <% @brewery_results.each do |result| %>
        <li>
          <%= link_to "#{result.name} - #{result.city.name}, #{result.state.name}", state_brewery_path(result.state_id, result.id) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
